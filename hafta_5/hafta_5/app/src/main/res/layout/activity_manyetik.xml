<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manyetik">

    <TextView
        android:id="@+id/magneticFieldXTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="X: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/magneticFieldYTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/magneticFieldXTextView"
        android:layout_marginTop="20dp"
        android:text="Y: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/magneticFieldZTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/magneticFieldYTextView"
        android:layout_marginTop="20dp"
        android:text="Z: "
        android:textSize="18sp" />

</RelativeLayout>
